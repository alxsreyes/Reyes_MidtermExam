<Window x:Class="Reyes_MidtermExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reyes_MidtermExam"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="300">

    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="*" />
            <RowDefinition Height ="*" />
            <RowDefinition Height ="*" />
        </Grid.RowDefinitions>

        <Button Name="b_order" Grid.Row="0" Height="70" Width="200" Content="ORDER" Click="b_order_Click"/>
        <Button Name="b_sales" Grid.Row="1" Height="70" Width="200" Content="SALES" Click="b_sales_Click"/>
        <Button Name="b_inventtory" Grid.Row="2" Height="70" Width="200" Content="PRODUCTS" Click="b_inventtory_Click"/>
        
        

    </Grid>
    
</Window>
